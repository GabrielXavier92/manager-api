// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum Plan {
  STARTER
}


model Account {
  id Int          @id @default(autoincrement())
  plan Plan @default(STARTER)
  status Boolean  @default(true)
  name String
  users User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Gender {
  MASCULINO
  FEMININO
}

model User {
  id Int          @id @default(autoincrement())
  account Account @relation(fields: [accountId], references: [id]) // Relacionamento com a conta
  accountId Int // Relacionamento com a conta
  status Boolean @default(true)
  email String @unique
  password String
  name String
  gender Gender? // Enum
  roles Roles[] @relation(references: [id])  // Relacionamento com as roles
  doctor Doctor?  @relation(fields: [doctorId], references: [id]) // Relacionamento com um Doctor caso exista
  doctorId Int? // Relacionamento com um Doctor caso exista
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Roles {
  id Int @id @default(autoincrement())
  role String @unique
  users User[] @relation(references: [id])
}

model Doctor {
  id Int          @id @default(autoincrement())
  account Account @relation(fields: [accountId], references: [id]) // Relacionamento com a conta
  accountId Int // Relacionamento com a conta
  user User? // Relacionamento com um User caso exista
  name String
  gender Gender? // Enum
  birth DateTime?
  register String?
  guides Guide[] // Relacionamento com as guias
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Patient {
  id Int          @id @default(autoincrement())
  account Account @relation(fields: [accountId], references: [id]) // Relacionamento com a conta
  accountId Int // Relacionamento com a conta
  name String
  gender Gender? // Enum
  birth DateTime?
  guides Guide[] // Relacionamento com as guias
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Guide {
  id Int          @id @default(autoincrement())
  account Account @relation(fields: [accountId], references: [id]) // Relacionamento com a conta
  accountId Int // Relacionamento com a conta
  doctor Doctor @relation(fields: [doctorId], references: [id]) // Relacionamento com um Doctor
  doctorId Int // Relacionamento com um Doctor
  patient Patient @relation(fields: [patientId], references: [id]) // Relacionamento com um Patient
  patientId Int // Relacionamento com um Patient
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}